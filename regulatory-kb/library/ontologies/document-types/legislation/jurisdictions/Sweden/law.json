{
  "schema_version": "2.0",
  "document_type": "legislation-reference",
  "jurisdiction": "SE",
  "authority": "RD",
  "metadata_key_order": [
    "jurisdiction",
    "authority",
    "law",
    "chapter",
    "paragraph",
    "stycke",
    "punkt",
    "address"
  ],
  "reference_schema": {
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Sweden legislation reference metadata",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "jurisdiction": { "type": "string", "const": "SE" },
      "authority": { "type": "string", "const": "RD" },
      "law": { "type": "string", "pattern": "^\\d{4}:\\d+$" },
      "chapter": { "type": "integer", "minimum": 1 },
      "paragraph": { "type": "integer", "minimum": 1 },
      "stycke": { "type": "integer", "minimum": 1 },
      "punkt": { "type": "integer", "minimum": 1 },
      "address": {
        "type": "string",
        "pattern": "^SE,RD,\\d{4}:\\d+,k\\d+(?:,p\\d+(?:,s\\d+(?:,pt\\d+)?)?)?$"
      }
    },
    "required": [
      "jurisdiction",
      "authority",
      "law",
      "chapter",
      "address"
    ],
    "allOf": [
      {
        "if": { "required": ["paragraph"] },
        "then": { "required": ["chapter"] }
      },
      {
        "if": { "required": ["stycke"] },
        "then": { "required": ["paragraph"] }
      },
      {
        "if": { "required": ["punkt"] },
        "then": { "required": ["stycke"] }
      }
    ]
  }
}
